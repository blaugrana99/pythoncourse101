print("mérföld-kilométer átváltás. adj meg egy távolságot és egy mértékegységet.")
dist = int(input("a távolság: "))
unit = input("mérföld vagy kilométer? (1/2): ")

for x in range (1):
    if unit == "1":
        km = dist * 1.609
        print("a megadott távolság " + str(km) + " km")
    elif unit == "2":
        merfold = dist * 0.621
        print("a megadott távolság " + str(merfold) + " mérföld")
    else:
        print("valamelyik változó nem volt megfelelő. futtasd újra az átváltót!")
        input("szeretnél másik távolságot átváltáni? i/n ")
        
        
        
        
print("kisbetű vs nagybetű")
txt = input("átalakítandó szöveg: ")
muvelet = input("mi legyen a sorsa? "
                " 1: kisbetűs "
                " 2: nagybetűs "
                " 3: első betűt nagybetűssé alakítsd "
                " 4: minden nagy betűt kicsivé alakítsd ")
nagy_txt = str.upper(txt)
kis_txt = str.lower(txt)
elso_nagy = str.capitalize(txt)
minden_nagy_kicsilesz = str.swapcase(txt)
if muvelet == "1":
    print(kis_txt)
if muvelet == "2":
    print(nagy_txt)
if muvelet == "3":
    print(elso_nagy)
if muvelet == "4":
    print(minden_nagy_kicsilesz)
